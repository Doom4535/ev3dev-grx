{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "make",
    "type": "shell",
    "args": ["-s", "-C", "${workspaceRoot}/build"],
    "tasks": [
        {
            "taskName": "build",
            "suppressTaskName": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$valac",
                "$gcc"
            ]
        },
        {
            "taskName": "edit_cache"
        },
        {
            "taskName": "reload_cache"
        },
        {
            "taskName": "clean"
        },
        {
            "taskName": "vala-boxes",
            "args": [
                "plugins"
            ],
            "problemMatcher": "$valac"
        },
        {
            "taskName": "vala-life",
            "args": [
                "plugins"
            ],
            "problemMatcher": "$valac"
        },
        {
            "taskName": "grx-calibrate-touch",
            "args": [
                "plugins"
            ],
            "problemMatcher": "$valac"
        },
        {
            "taskName": "grx-3.0-typelib",
            "args": [
                "plugins"
            ]
        },
        {
            "taskName": "armel - start",
            "command": "docker",
            "args": [
                "start",
                "grx_armel"
            ],
            "problemMatcher": []
        },
        {
            "taskName": "armel - stop",
            "command": "docker",
            "args": [
                "stop",
                "--time",
                "0",
                "grx_armel"
            ],
            "problemMatcher": []
        },
        {
            "taskName": "armel - build",
            "command": "docker",
            "args": [
                "exec",
                "--tty",
                "grx_armel",
                "make",
                "install"
            ],
            "problemMatcher": [
                "$gcc",
                "$valac"
            ]
        }
    ]
}
