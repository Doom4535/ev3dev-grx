{
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true
    },
    "files.associations": {
        "*.h": "c"
    },
    "search.exclude": {
        "build": true,
        "doc/sphinx/_build": true,
        "doc/sphinx/_html_extra": true
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "C_Cpp.intelliSenseEngine": "Default"
}
