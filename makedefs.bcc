BCCROOT =e:\comp\bc45
BCC     =$(BCCROOT)\bin\bcc
TLIB    =$(BCCROOT)\bin\tlib
TASM    =$(BCCROOT)\bin\tasm
STRIP   =$(BCCROOT)\bin\tdstrip
MAKE    =$(BCCROOT)\bin\maker -fmakefile.bcc

MODEL=  l

!if $d(DEBUG)
CCOPT=  -O -G -Z -2 -m$(MODEL) -w -w-par -w-stv -d -v -DDEBUG=$(DEBUG)
LDOPT=  -m$(MODEL) -v
!else
CCOPT=  -O -G -Z -2 -m$(MODEL) -w -w-par -w-stv -d -k-
LDOPT=  -m$(MODEL)
!endif
